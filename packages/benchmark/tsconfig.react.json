{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@duck/typescript-config/base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/old-registry-ui/*": [
        "../_oldstuff_refactor/ui/*"
      ],
      "~/*": [
        "./*"
      ],
      "@duck/registry-ui-duckui/*": [
        "../registry-ui-duckui/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".",
    "../_oldstuff_refactor/ui/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
