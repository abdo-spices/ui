{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@duck/typescript-config/base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".",
    "../_oldstuff_refactor/default/ui/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
